{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1210,
    "height": 450,
    
    "params": [
        {
            "name": "zoom_level",
            "value": 160,
            "bind": {
                "input": "range",
                "min": 100,
                "max": 800,
                "step": 10,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [0,0],
            "bind": {
                "input": "select",
                "options": [
                    [0,0],
                    [110, 5],
                    [20, 10],
                    [100, 20],
                    [140, -25],
                    [10, 50],
                    [-100, 40]
                ],
                "labels": ["Entire World", "Malaysia (Destination)", "Africa", "Asia", "Oceania", "Europe", "North America"],
                "name": "Map Centre"
            }
        }
    ],
    "projection": {
        "type": "equalEarth",
        "center": {"expr": "center_to"},
        "scale": {"expr": "(center_to[0] == 0 && center_to[1] == 0) ? zoom_level: zoom_level * 1.8"}
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "skyblue"
            }
        },
        {
            "data": {
                "url": "js/WorldMapWithGraticules.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "js/WorldMapWithGraticules.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },
        {
            "data": {
                "url": "data/country_info_with_arrival.csv"
            },
            "transform": [
                {
                    "calculate": "101.9758",
                    "as": "MalaysiaLon"
                },
                {
                    "calculate": "4.2105",
                    "as": "MalaysiaLat"
                }
            ],
            "mark": {
                "type": "rule",
                "strokeOpacity": 0.7
            },
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "longitude2": {
                    "field": "MalaysiaLon"
                },
                "latitude2": {
                    "field": "MalaysiaLat"
                },
                "strokeWidth": {
                    "field": "Arrival",
                    "type": "quantitative",
                    "scale": {
                        "type": "sqrt",
                        "domain": [30000, 36000000],
                        "range": [
                            0.2,
                            8
                        ]
                    }
                },
                "color": {
                    "value": "#3182bd"
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Arrival",
                        "type": "quantitative"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "data/country_info_with_arrival.csv"
            },
            "mark": {
                "type": "circle",
                "color":"green"
            },
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "size": {
                    "value": 30
                },
                "tooltip": [
                    {
                        "field": "Country"
                    },
                    {
                        "field": "Arrival"
                    }
                ]
            }
        },
        {
            "data": {
                "values": [
                    {
                        "Lon": 101.9758,
                        "Lat": 4.2105,
                        "Country": "Malaysia"
                    }
                ]
            },
            "mark": {
                "type": "circle",
                "color": "red",
                "size": 100
            },
            "encoding": {
                "longitude": {
                    "field": "Lon"
                },
                "latitude": {
                    "field": "Lat"
                },
                "tooltip": [
                    {
                        "field": "Country"
                    }
                ]
            }
        }
    ]
}