{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1290,
    "height": 450,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "oceans"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightblue"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Jcccn03/Malaysia-Inbound-Tourism-Vegalite/master/js/WorldMapWithGraticules.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "dimgray"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Jcccn03/Malaysia-Inbound-Tourism-Vegalite/master/js/WorldMapWithGraticules.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "whitesmoke"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Jcccn03/Malaysia-Inbound-Tourism-Vegalite/master/data/country_info_with_arrival.csv"
            },
            "transform": [
                {
                    "calculate": "101.9758",
                    "as": "MalaysiaLon"
                },
                {
                    "calculate": "4.2105",
                    "as": "MalaysiaLat"
                }
            ],
            "mark": {
                "type": "rule",
                "strokeOpacity": 0.4
            },
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "longitude2": {
                    "field": "MalaysiaLon"
                },
                "latitude2": {
                    "field": "MalaysiaLat"
                },
                "strokeWidth": {
                    "field": "Arrival",
                    "type": "quantitative",
                    "scale": {
                        "type": "sqrt",
                        "domain": [
                            30000,
                            10000000
                        ],
                        "range": [
                            0.2,
                            14
                        ]
                    },
                    "title": "Arrival Count",
                    "legend": {
                        "orient": "none",
                        "legendX": 1160,
                        "legendY": 15,
                        "direction": "vertical",
                        "fillColor": null,
                        "strokeColor": null,
                        "cornerRadius": 6,
                        "padding": 5
                    }
                },
                "color": {
                    "value": "#3182bd"
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Arrival",
                        "type": "quantitative",
                        "format": ",.0f"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/Jcccn03/Malaysia-Inbound-Tourism-Vegalite/master/data/country_info_with_arrival.csv"
            },
            "mark": {
                "type": "circle",
                "color": "#1e588a"
            },
            "encoding": {
                "opacity": {
                    "value": 0.7
                },
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "size": {
                    "value": 40
                },
                "tooltip": [
                    {
                        "field": "Country"
                    },
                    {
                        "field": "Arrival",
                        "type": "quantitative",
                        "format": ",.0f"
                    }
                ]
            }
        },
        {
            "data": {
                "values": [
                    {
                        "Lon": 101.9758,
                        "Lat": 4.2105,
                        "Country": "Malaysia"
                    }
                ]
            },
            "mark": {
                "type": "circle",
                "color": "red",
                "size": 80
            },
            "encoding": {
                "longitude": {
                    "field": "Lon"
                },
                "latitude": {
                    "field": "Lat"
                },
                "tooltip": [
                    {
                        "field": "Country"
                    }
                ]
            }
        }
    ]
}